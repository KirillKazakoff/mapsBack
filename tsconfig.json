{
    "compilerOptions": {
        "target": "ESNext",
        "module": "commonjs",
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "parcelTsPluginOptions": {
        // If true type-checking is disabled
        "transpileOnly": false
    },
    "exclude": [
        "node_modules"
    ],
}